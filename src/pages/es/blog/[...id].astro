---
import { getCollection, render, type CollectionEntry } from 'astro:content'
import { sortMDByDate } from 'packages/pure/utils/server'

import PostLayout from '@/layouts/BlogPost.astro'

export const prerender = true

export async function getStaticPaths() {
  // const posts = sortMDByDate(await getBlogCollection())
  const posts = sortMDByDate(await getCollection('blog.es'))

  return posts.map((post) => ({
    params: { id: post.id },
    props: { post, posts }
  }))
}

type Props = {
  post: CollectionEntry<'blog.es'>
  posts: CollectionEntry<'blog.es'>[]
}

const { post, posts } = Astro.props
const { Content, headings, remarkPluginFrontmatter } = await render(post)
---

<PostLayout {post} {posts} {headings} {remarkPluginFrontmatter}>
  <Content />
</PostLayout>
