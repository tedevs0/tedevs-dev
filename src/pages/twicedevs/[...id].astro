---
import { render, type CollectionEntry } from 'astro:content'
import { getTwicedevsCollection, sortMDByDate } from 'packages/pure/utils/server'

import PostLayout from '@/layouts/TwicedevsPost.astro'

export const prerender = true

export async function getStaticPaths() {
  const posts = sortMDByDate(await getTwicedevsCollection())
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post, posts }
  }))
}

type Props = {
  post: CollectionEntry<'twicedevs'>
  posts: CollectionEntry<'twicedevs'>[]
}

const { post, posts } = Astro.props
const { Content, headings, remarkPluginFrontmatter } = await render(post)
---

<PostLayout {post} {posts} {headings} {remarkPluginFrontmatter}>
  <Content />
</PostLayout>
