---
import type { MarkdownHeading } from 'astro'
import type { CollectionEntry } from 'astro:content'

// Plugin styles
import 'katex/dist/katex.min.css'

import { getLocaleFromPath } from 'src/i18n/utils'

import { Comment, MediumZoom } from 'astro-pure/advanced'
import { ArticleBottom, Copyright } from 'astro-pure/components/pages'
import PageLayout from '@/layouts/ContentLayout.astro'
import { integ } from '@/site-config'

import Hero from '../components/Hero.astro'
import TOC from '../components/TOC.astro'

interface Props {
  // post: CollectionEntry<'blog'>
  // posts: CollectionEntry<'blog'>[]
  post: CollectionEntry<'blog'> | CollectionEntry<'blog.es'>
  posts: (CollectionEntry<'blog'> | CollectionEntry<'blog.es'>)[]
  headings: MarkdownHeading[]
  remarkPluginFrontmatter: Record<string, unknown>
}

const {
  post: { id, data },
  posts,
  headings,
  remarkPluginFrontmatter
} = Astro.props

const {
  description,
  heroImage,
  publishDate,
  title,
  updatedDate,
  draft: isDraft,
  comment: enableComment
} = data

const socialImage = heroImage
  ? typeof heroImage.src === 'string'
    ? heroImage.src
    : heroImage.src.src
  : '/images/social-card.png'
const articleDate = updatedDate?.toISOString() ?? publishDate.toISOString()
const primaryColor = data.heroImage?.color ?? 'hsl(var(--primary) / var(--un-text-opacity))'

const locale = getLocaleFromPath(Astro.url.pathname)

const back = locale === 'es' ? '/es/blog' : '/blog'
---

<PageLayout
  meta={{ articleDate, description, ogImage: socialImage, title }}
  highlightColor={primaryColor}
  back={back}
  locale={locale}
>
  {!!headings.length && <TOC {headings} slot='sidebar' />}

  <Hero {data} {remarkPluginFrontmatter} locale={locale} slot='header' />

  <slot />

  <Fragment slot='bottom'>
    {/* Copyright */}
    <Copyright {data} />
    {/* Article recommend */}
    <ArticleBottom collections={posts} {id} class='mt-3 sm:mt-6' />
    {/* Comment */}
    {!isDraft && enableComment && <Comment class='mt-3 sm:mt-6' />}
  </Fragment>

  <slot name='bottom-sidebar' slot='bottom-sidebar' />
</PageLayout>

{integ.mediumZoom.enable && <MediumZoom />}
