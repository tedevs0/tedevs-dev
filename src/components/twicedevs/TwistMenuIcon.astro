<div class='frame'>
  <div class='center'>
    <div class='menu-icon' id='twistIcon'>
      <div class='line top'></div>
      <div class='line middle'></div>
      <div class='line bottom'></div>
    </div>
  </div>
</div>

<script is:inline>
  // Evita que se ejecute antes de que el DOM estÃ© listo
  document.addEventListener('DOMContentLoaded', () => {
    const menu = document.getElementById('twistIcon')
    if (menu) {
      menu.addEventListener('click', () => {
        menu.classList.toggle('active')
      })
    }
  })
</script>

<style>
  .frame {
    position: relative;
    width: auto;
    height: 400px;
    margin: 2rem auto;
    border-radius: 2px;
    box-shadow: 1px 2px 10px rgba(0, 0, 0, 0.3);
    background: #fa5e9d;
  }

  .center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .menu-icon {
    width: 80px;
    height: 64px;
    cursor: pointer;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .line {
    height: 8px;
    border-radius: 4px;
    background-color: #ffffff;
    transition: all 0.6s ease;
    transform-origin: center;
  }

  .menu-icon.active .top {
    transform: rotate(360deg) translateY(18px) scaleX(0.8);
    background-color: #ffd6ec;
  }

  .menu-icon.active .middle {
    transform: scaleX(0);
    opacity: 0;
  }

  .menu-icon.active .bottom {
    transform: rotate(-360deg) translateY(-18px) scaleX(0.8);
    background-color: #ffd6ec;
  }
</style>
