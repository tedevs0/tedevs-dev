          {config.author}
        </span>
        <span class='text-xs italic text-muted-foreground'>
          ðŸš€ Frontend-first, but always ready to take on any full-stack challenge.
          <sub class='text-[10px] align-baseline'>
            <a
              href='https://yaninaunrein.vercel.app/'
              target='_blank'
              rel='noopener noreferrer'
              class='underline hover:text-primary'
            >
              1
            </a>
          </sub>
        </span>
      </div>
      <!-- footer -->
      {/* Social Brands */}
      <div class='flex items-center gap-x-4'>
        {
          footerConf.social &&
            Object.entries(footerConf.social).map(([platform, { label, url }]) => (
              <a
                class='inline-block text-muted-foreground transition-all hover:text-muted-foreground/75'
                href={url}
                aria-label={label}
                target='_blank'
                rel='noopener noreferrer'
              >
                <Icon name={platform as keyof typeof footerConf.social} />
              </a>
            ))
        }
      </div>
    </div>
  </div>
